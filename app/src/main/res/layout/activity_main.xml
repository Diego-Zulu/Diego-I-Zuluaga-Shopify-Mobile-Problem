<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shopify_icon"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="27dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_napoleon"
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/shopify_icon"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/napoleon_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_user" />

                    <TextView
                        android:id="@+id/napoleon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/napoleon_image"
                        android:layout_toRightOf="@+id/napoleon_image"
                        android:paddingEnd="5dp"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/total_spent_napoleon"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/napoleon_spent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/napoelon_canadian_dollars"
                        android:layout_alignBottom="@+id/napoelon_canadian_dollars"
                        android:layout_toLeftOf="@+id/napoelon_canadian_dollars"
                        android:layout_toStartOf="@+id/napoelon_canadian_dollars"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:paddingRight="5dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="0dp"
                        android:paddingStart="0dp"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/napoelon_canadian_dollars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/canadian_dollar"
                        android:textAlignment="center"
                        android:textSize="20sp" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_bags"
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card_view_napoleon"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/awesome_bronze_bags_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_bag" />

                    <TextView
                        android:id="@+id/awesome_bronze_bags_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/awesome_bronze_bags_image"
                        android:layout_toRightOf="@+id/awesome_bronze_bags_image"
                        android:paddingEnd="5dp"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/total_sold_awesome_bronze_bag"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/awesome_bronze_bags_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/awesome_bronze_bags_quantifier"
                        android:layout_alignBottom="@+id/awesome_bronze_bags_quantifier"
                        android:layout_toLeftOf="@+id/awesome_bronze_bags_quantifier"
                        android:layout_toStartOf="@+id/awesome_bronze_bags_quantifier"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:paddingRight="5dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="0dp"
                        android:paddingStart="0dp"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/awesome_bronze_bags_quantifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/awesome_bronze_bags_quantifier"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>